<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/course_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/image_corner_radius"
        android:layout_margin="@dimen/element_margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/card_image"
                android:layout_width="@dimen/recyclerview_image_size"
                android:layout_height="@dimen/recyclerview_image_size"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/element_margin_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/earthquake"/>

        <TextView
                android:id="@+id/card_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="@id/card_image"
                app:layout_constraintTop_toBottomOf="@id/card_image"
                tools:text="Intermediate"/>

        <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_med"
                app:layout_constraintStart_toStartOf="@id/card_image"
                app:layout_constraintTop_toBottomOf="@id/card_level"
                tools:text="Pets"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
