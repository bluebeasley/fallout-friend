<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HouseholdList">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your family members."
            android:ems="10"
            android:id="@+id/listViewPlaceholder" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="80sp"
    />
    <Button
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonAddFam"
            app:layout_constraintTop_toBottomOf="@+id/listViewPlaceholder"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="I have none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/noFam"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddFam" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>